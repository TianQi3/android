<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/f0f0f0"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.humming.asc.sales.activity.settings.MyMessageActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/WhiteBG"
        android:paddingRight="@dimen/magin_10">

        <ImageView
            android:id="@+id/message_my__back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="@dimen/magin_10"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/common_action_back_black" />

        <TextView
            android:id="@+id/ecatalog_create__toobar_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/my_message"
            android:textColor="@color/f33"
            android:textSize="@dimen/text_size_17"
            android:textStyle="bold" />
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="-1dp"
        android:background="@color/f0f0f0"></View>

    <include layout="@layout/content_my_message" />
</LinearLayout>
