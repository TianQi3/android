<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mf_request_contain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/f0f0f0"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activity.customer.CustomerMFRequestActivity"
    tools:showIn="@layout/activity_customer_mf_request">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/content_customer_mf_request__item_code_contain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/WhiteBG"
                android:orientation="horizontal"
                android:padding="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Item Code"
                    android:textColor="@color/mf_item_left_text"
                    android:textSize="@dimen/text_size_18" />

                <TextView
                    android:id="@+id/content_customer_mf_request__item_code"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textColor="@color/mf_item_left_text"
                    android:textSize="@dimen/text_size_18"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/go" />
            </LinearLayout>

            <TextView
                android:id="@+id/content_customer_mf_request__name_cn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="15dp"
                android:textSize="@dimen/text_size_18"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/content_customer_mf_request__name_en"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="4dp"
                android:textColor="@color/mf_item_left_text"
                android:textSize="@dimen/text_size_14"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@color/WhiteBG"
                android:orientation="vertical"
                android:padding="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:text="Customer Code :"
                        android:textColor="@color/mf_item_left_text"
                        android:textSize="@dimen/text_size_14" />

                    <LinearLayout
                        android:id="@+id/content_customer_mf_request__customer_code_contain"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/content_customer_mf_request__customer_code"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingLeft="5dp"
                            android:textColor="@color/_9F8A76"
                            android:textSize="@dimen/text_size_13" />

                        <ImageView
                            android:id="@+id/content_customer_mf_request__customer_code_click"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:src="@mipmap/go" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:text="Customer Name :"
                        android:textColor="@color/mf_item_left_text"
                        android:textSize="@dimen/text_size_14" />

                    <TextView
                        android:id="@+id/content_customer_mf_request__customer_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="5dp"
                        android:textColor="@color/_9F8A76"
                        android:textSize="@dimen/text_size_13" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:text="Currency :"
                        android:textColor="@color/mf_item_left_text"
                        android:textSize="@dimen/text_size_14" />

                    <TextView
                        android:id="@+id/content_customer_mf_request__currency"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="5dp"
                        android:textColor="@color/_9F8A76"
                        android:textSize="@dimen/text_size_13" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:text="Start Date :"
                        android:textColor="@color/mf_item_left_text"
                        android:textSize="@dimen/text_size_14" />

                    <LinearLayout
                        android:id="@+id/content_customer_mf_request__start_date_contain"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/content_customer_mf_request__start_date"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingLeft="5dp"
                            android:textColor="@color/colorAccent"
                            android:textSize="@dimen/text_size_14" />

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@mipmap/date" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/content_customer_mf_request__end_date_contain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:text="End Date :"
                        android:textColor="@color/mf_item_left_text"
                        android:textSize="@dimen/text_size_14" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/content_customer_mf_request__end_date"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingLeft="5dp"
                            android:textColor="@color/colorAccent"
                            android:textSize="@dimen/text_size_14" />

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@mipmap/date" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:text="RP :"
                        android:textColor="@color/mf_item_left_text"
                        android:textSize="@dimen/text_size_14" />

                    <TextView
                        android:id="@+id/content_customer_mf_request__rp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="5dp"
                        android:textColor="@color/_9F8A76"
                        android:textSize="@dimen/text_size_13" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:text="Price :"
                        android:textColor="@color/mf_item_left_text"
                        android:textSize="@dimen/text_size_14" />

                    <EditText
                        android:id="@+id/content_customer_mf_request__price"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="@string/input_price"
                        android:imeOptions="actionDone"
                        android:inputType="number|numberDecimal"
                        android:paddingLeft="5dp"
                        android:singleLine="true"
                        android:textColor="@color/_9F8A76"
                        android:textColorHint="#B98A5F"
                        android:textSize="@dimen/text_size_13" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:text="@string/trade_value"
                        android:textColor="@color/mf_item_left_text"
                        android:textSize="@dimen/text_size_14" />

                    <EditText
                        android:id="@+id/content_customer_mf_request__trade_value"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:imeOptions="actionDone"
                        android:inputType="number|numberDecimal"
                        android:paddingLeft="5dp"
                        android:singleLine="true"
                        android:text="0"
                        android:textColor="@color/_9F8A76"
                        android:textColorHint="@color/_9F8A76"
                        android:textSize="@dimen/text_size_13" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:text="RP Discount :"
                        android:textColor="@color/mf_item_left_text"
                        android:textSize="@dimen/text_size_14" />

                    <TextView
                        android:id="@+id/content_customer_mf_request__rp_discount"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="5dp"
                        android:textColor="@color/_9F8A76"
                        android:textSize="@dimen/text_size_13" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:text="SKU Margin :"
                        android:textColor="@color/mf_item_left_text"
                        android:textSize="@dimen/text_size_14" />

                    <TextView
                        android:id="@+id/content_customer_mf_request__sku_margin"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="5dp"
                        android:textColor="@color/_9F8A76"
                        android:textSize="@dimen/text_size_13" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:text="@string/ap"
                        android:textColor="@color/mf_item_left_text"
                        android:textSize="@dimen/text_size_14" />

                    <TextView
                        android:id="@+id/content_customer_mf_request__ap"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="5dp"
                        android:textColor="@color/_9F8A76"
                        android:textSize="@dimen/text_size_13" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:text="Agreement No. :"
                        android:textColor="@color/mf_item_left_text"
                        android:textSize="@dimen/text_size_14" />

                    <TextView
                        android:id="@+id/content_customer_mf_request__agreement_no"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="5dp"
                        android:textColor="@color/_9F8A76"
                        android:textSize="@dimen/text_size_13" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:text="Contract Margin :"
                        android:textColor="@color/mf_item_left_text"
                        android:textSize="@dimen/text_size_14" />

                    <TextView
                        android:id="@+id/content_customer_mf_request__contract_margin"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="5dp"
                        android:textColor="@color/_9F8A76"
                        android:textSize="@dimen/text_size_13" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:text="@string/contract_ap"
                        android:textColor="@color/mf_item_left_text"
                        android:textSize="@dimen/text_size_14" />

                    <TextView
                        android:id="@+id/content_customer_mf_request__contract_ap"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="5dp"
                        android:textColor="@color/_9F8A76"
                        android:textSize="@dimen/text_size_13" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="15dp"
                android:paddingLeft="15dp"
                android:paddingTop="15dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/baseinfo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Description"
                    android:textSize="@dimen/text_size_18"
                    android:textStyle="bold" />

            </LinearLayout>

            <EditText
                android:id="@+id/content_customer_mf_request__description"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginBottom="40dp"
                android:layout_weight="1"
                android:background="@color/WhiteBG"
                android:focusable="false"
                android:hint="@string/input_content"
                android:padding="15dp"
                android:textColor="@color/_9F8A76"
                android:textColorHint="@color/ffbfa574"
                android:textSize="@dimen/text_size_13" />

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <TextView
        android:id="@+id/content_customer_mf_request__commit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ffbfa574"
        android:gravity="center"
        android:textColor="@color/WhiteBG"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:text="@string/save"
        android:textSize="@dimen/text_size_18" />
</LinearLayout>
