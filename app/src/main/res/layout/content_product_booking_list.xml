<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/magin_15"
    android:background="@color/WhiteBG"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activity.product.BookingListActivity"
    tools:showIn="@layout/activity_product_booking_list">

    <com.humming.asc.sales.component.Loading
        android:id="@+id/activity_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4">

        <TextView
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="0.5"
            android:background="@color/ffbfa574"
            android:gravity="center"
            android:text="@string/qty1"
            android:textColor="@color/WhiteBG"
            android:textSize="10sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_marginLeft="1dp"
            android:layout_weight="1"
            android:background="@color/ffbfa574"
            android:gravity="center"
            android:text="@string/sales1"
            android:textColor="@color/WhiteBG"
            android:textSize="10sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_marginLeft="1dp"
            android:layout_weight="1"
            android:background="@color/ffbfa574"
            android:gravity="center"
            android:text="Date"
            android:textColor="@color/WhiteBG"
            android:textSize="10sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_marginLeft="1dp"
            android:layout_weight="1.5"
            android:background="@color/ffbfa574"
            android:gravity="center"
            android:text="@string/customer"
            android:textColor="@color/WhiteBG"
            android:textSize="10sp"
            android:textStyle="bold" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/mf_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>