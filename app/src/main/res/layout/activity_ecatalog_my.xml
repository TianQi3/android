<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/f0f0f0"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.humming.asc.sales.activity.ecatalog.MyEcatalogActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/WhiteBG"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingRight="@dimen/magin_15">

        <ImageView
            android:id="@+id/ecatalog_my__back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="@dimen/magin_10"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/common_action_back_black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="@string/my_ecatalog"
            android:textColor="@color/f33"
            android:textSize="@dimen/text_size_17"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/ecatalog_my__template"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:visibility="gone"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/product_info_toolbar_share"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:src="@mipmap/quotation_action_template" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="@string/template"
                android:textColor="@color/_448fe7"
                android:textSize="@dimen/text_size_15" />
        </LinearLayout>
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="-1dp"
        android:background="@color/f0f0f0"></View>

    <include layout="@layout/content_ecatalog_my" />
</LinearLayout>
