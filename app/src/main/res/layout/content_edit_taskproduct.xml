<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/f0f0f0"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:background="@color/WhiteBG"
        style="@style/editableItemGroupBox">

        <LinearLayout
            android:id="@+id/content_edit_taskproduct__select_code"
            style="@style/editableItemGroup">

            <TextView
                style="@style/editableItemLabel"
                android:text="@string/item_code" />

            <TextView
                android:id="@+id/content_edit_taskproduct__select_code_value"
                android:textColor="@color/tab_text"
                style="@style/editableItemValue" />

            <ImageView style="@style/editableItemRightArrow" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/f1f1f1"></View>

        <LinearLayout
            android:background="@color/WhiteBG"
            style="@style/editableItemGroup">

            <TextView
                android:id="@+id/content_edit_taskproduct__product_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textColor="@color/tab_text"
                android:textSize="16sp" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:background="@color/WhiteBG"
        style="@style/editableItemGroupBox">

        <LinearLayout
            android:id="@+id/content_edit_taskproduct__forecast_sales"
            style="@style/editableItemGroup">

            <TextView
                style="@style/editableItemLabel"
                android:layout_weight="1.2"
                android:text="@string/forecast_sales" />

            <TextView
                android:id="@+id/content_edit_taskproduct__forecast_sales_value"
                style="@style/editableItemValue" />

            <ImageView style="@style/editableItemRightArrow" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/f1f1f1"></View>

        <LinearLayout
            android:id="@+id/content_edit_taskproduct__forecast_qty"
            style="@style/editableItemGroup">

            <TextView
                style="@style/editableItemLabel"
                android:text="@string/forecast_qty" />

            <TextView
                android:id="@+id/content_edit_taskproduct__forecast_qty_value"
                style="@style/editableItemValue" />

            <ImageView style="@style/editableItemRightArrow" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/f1f1f1"></View>

        <LinearLayout
            android:id="@+id/content_edit_taskproduct__forecast_date"
            style="@style/editableItemGroup">

            <TextView
                style="@style/editableItemLabel"
                android:text="@string/fore_date" />

            <TextView
                android:id="@+id/content_edit_taskproduct__forecast_date_value"
                style="@style/editableItemValue" />

            <ImageView style="@style/editableItemRightArrow" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:background="@color/WhiteBG"
        style="@style/editableItemGroupBox">

        <LinearLayout
            android:id="@+id/content_edit_taskproduct__actual_sales"
            style="@style/editableItemGroup">

            <TextView
                style="@style/editableItemLabel"
                android:text="@string/actual_sales" />

            <TextView
                android:id="@+id/content_edit_taskproduct__actual_sales_value"
                style="@style/editableItemValue" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/f1f1f1"></View>

        <LinearLayout
            android:id="@+id/content_edit_taskproduct__actual_qty"
            style="@style/editableItemGroup">

            <TextView
                style="@style/editableItemLabel"
                android:text="@string/actual_qty" />

            <TextView
                android:id="@+id/content_edit_taskproduct__actual_qty_value"
                style="@style/editableItemValue" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/f1f1f1"></View>

        <LinearLayout
            android:id="@+id/content_edit_taskproduct__actual_date"
            style="@style/editableItemGroup">

            <TextView
                style="@style/editableItemLabel"
                android:text="@string/actual_date" />

            <TextView
                android:id="@+id/content_edit_taskproduct__actual_date_value"
                style="@style/editableItemValue" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
