<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="53dp"
    android:layout_marginRight="53dp"
    android:background="@drawable/stock_warn_dialog_bg"
    android:gravity="center"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/stock_warn_dialog_cancel1"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:padding="@dimen/magin_5"
            android:layout_gravity="right"
            android:layout_margin="@dimen/magin_10"
            android:src="@mipmap/cha" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="@dimen/magin_30">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="@dimen/magin_15"
                android:paddingRight="@dimen/magin_15"
                android:text="@string/set_stock_warn"
                android:textColor="#ff030303"
                android:textSize="@dimen/text_size_17"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/stock_warn_dialog_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/magin_5"
                android:gravity="center"
                android:textColor="#ff030303"
                android:textSize="@dimen/text_size_13" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:text="@string/send_notification"
                android:textColor="#ff030303"
                android:textSize="@dimen/text_size_13" />

            <EditText
                android:id="@+id/stock_warn_dialog_edittext"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/magin_20"
                android:layout_marginRight="@dimen/magin_20"
                android:layout_marginTop="7dp"
                android:background="@drawable/bg_border_radius_gray1"
                android:ems="10"
                android:focusable="true"
                android:hint="@string/enter_stock_warn"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:padding="5dp"
                android:textColor="@color/_f999"
                android:textColorHint="@color/_f999"
                android:textSize="@dimen/text_size_10"></EditText>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="@dimen/magin_10"
                android:background="#384D4D4D"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/pro_stock_warn_dialog_cancle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:text="@string/cancel_set"
                    android:textColor="#007AFF" />

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="#384D4D4D"></View>

                <TextView
                    android:id="@+id/pro_stock_warn_dialog_submit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:text="@string/sumit"
                    android:textColor="#007AFF"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

</LinearLayout>