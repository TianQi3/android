<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/e5e5e5"></View>

        <TextView
            android:id="@+id/item_pro_ecatalog_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="2018-12-30"
            android:textColor="@color/f33"
            android:textSize="@dimen/text_size_12" />

        <TextView
            android:id="@+id/item_pro_ecatalog_accout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            android:ellipsize="end"
            android:gravity="center"
            android:paddingLeft="@dimen/magin_5"
            android:singleLine="true"
            android:textColor="@color/f33"
            android:textSize="@dimen/text_size_12" />

        <TextView
            android:id="@+id/item_pro_ecatalog_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:gravity="center"
            android:text="11"
            android:textColor="@color/ffab22"
            android:textSize="@dimen/text_size_10" />

        <LinearLayout
            android:id="@+id/item_pro_ecatalog_add"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_ecatalog_add_blue"
                android:gravity="center"
                android:paddingBottom="2dp"
                android:paddingLeft="@dimen/magin_10"
                android:paddingRight="@dimen/magin_10"
                android:paddingTop="2dp"
                android:text="@string/add1"
                android:textColor="@color/ff448fe7"
                android:textSize="@dimen/text_size_10" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/e5e5e5"></View>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/e5e5e5"></View>

</LinearLayout>
