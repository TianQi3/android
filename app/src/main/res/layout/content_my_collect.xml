<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.humming.asc.sales.activity.settings.MyCollectActivity"
    tools:showIn="@layout/activity_my_collect">

    <com.humming.asc.sales.component.Loading
        android:id="@+id/activity_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone" />

    <include layout="@layout/listview_no_data"></include>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/collect_my_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
