<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/f0f0f0"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activity.product.filter.FilterActivity"
    tools:showIn="@layout/activity_product_filter_country">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/WhiteBG"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingBottom="@dimen/magin_30"
        android:paddingRight="15dp"
        android:paddingTop="@dimen/magin_20">

        <com.humming.asc.sales.component.product.TagFlowLayout
            android:id="@+id/content_product_filter__flowlayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

        </com.humming.asc.sales.component.product.TagFlowLayout>

        <RadioButton
            android:id="@+id/content_product_filter__radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/magin_10"
            android:checked="false"
            android:text="@string/exclusive_channel"
            android:textColor="@color/f33"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/content_product_filter__country_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/magin_15"
        android:layout_marginRight="@dimen/magin_15"
        android:layout_marginTop="60dp"
        android:background="@drawable/button_pro_common_submit"
        android:gravity="center"
        android:paddingBottom="@dimen/magin_10"
        android:paddingTop="@dimen/magin_10"
        android:text="@string/sumit"
        android:textColor="@color/WhiteBG"
        android:textSize="@dimen/text_size_15" />

</LinearLayout>
