<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- default -->
    <item android:top="1dp" android:state_focused="false" android:state_pressed="false">
        <shape android:shape="rectangle" >
            <stroke android:width="1dp" android:color="#FFc2c2c2" />

            <gradient android:angle="-90" android:endColor="#FFD7D7D7" android:startColor="#FFFFFFFF" />

            <corners android:bottomLeftRadius="6dp" android:bottomRightRadius="6dp" android:topLeftRadius="6dp" android:topRightRadius="6dp" />

            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape>
	</item>
 	<!-- button pressed -->
    <item android:state_pressed="true" android:state_focused="false">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="#FFc2c2c2" />

            <gradient android:angle="-90" android:endColor="#FFBCBBBB" android:startColor="#FF969595" />

            <corners android:bottomLeftRadius="6dp" android:bottomRightRadius="6dp" android:topLeftRadius="6dp" android:topRightRadius="6dp" />

            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape>
    </item>
</selector>